#:import ZBarCam kivy_garden.zbarcam.ZBarCam
#:import ZBarSymbol pyzbar.pyzbar.ZBarSymbol

MyLayout:
    MDTopAppBar:
        title: "PymeShield"
        elevation: 4
        pos_hint: {"top": 1}
        md_bg_color: "#ff6720"
        specific_text_color: "black"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

#menu desplegable
    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "Home"
                MDLabel:
                    text:"Screen Home"
                    halign: "center"
                Image:
                    source: 'Img/inici.jpg'
            MDScreen:
                name: "Scanner"
                MDLabel:
                    text:"QR"
                    halign: "center"
                Image:
                    source: 'Img/scanQR.png'

            MDScreen:
                name: "Inventari"
                MDBoxLayout:
                    orientation:"vertical"
                    pos_hint: {'center_y': .39, 'x': .0}

                    MDTextField:
                        id: search_field
                        hint_text: 'Buscar dipositivo'
                        icon_right: "magnify"
                        helper_text_mode: "on_error"
                        helper_text: "Introduce un nombre valido"
                        mode: "fill"
                        fill_color: 0, 0, 0, .5
                        on_text: app.buscar(self.text)

                    MDScrollView:
                        MDList:
                            id: list

            MDScreen:
                name: "QR"
                BoxLayout:
                    orientation: 'vertical'
                    #TODO: La càmera s'obre per defecte...
                    ZBarCam:
                        id: zbarcam
                        # optional, by default checks all types
                        code_types: ZBarSymbol.QRCODE, ZBarSymbol.EAN13
                    Label:
                        id: qrlabel
                        size_hint: None, None
                        size: self.texture_size[0], 50
                        text: ', '.join([str(symbol.data) for symbol in zbarcam.symbols])
                        on_text: root.calc(self.text)                # MDLabel:
                    text:"QR Screen"
                    halign: "center"
                MDRectangleFlatButton:
                    pos_hint: {'center_y': 0.80, 'x': 0.8}
                    on_release: app.close_camera()
                    MDIcon:
                        icon: 'close'
                        halign: 'center'
    
            MDScreen:
                name: "Contact"
                MDLabel:
                    text:"Screen Contact Form"
                    halign: "center"

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical' 
                ContentNavigationDrawer:
                    manager: screen_manager
                    nav_drawer: nav_drawer
<ContentNavigationDrawer>:
    MDNavigationDrawerMenu:
        MDNavigationDrawerHeader:
            title: "Pymeshield"
            title_font_style: "H5"
            text: "Menú"
            source: "img/logo.png"
            spacing: "16dp"
            padding: "12dp", 0, 0, "56dp"
        DrawerClickableItem:
            text: "Inicio"
            icon: "home"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Inicio"

        DrawerClickableItem:
            text: "Informes"
            icon: "file-document"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Informe"     

        DrawerClickableItem:
            text: "Tareas"
            icon: "clipboard-list"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Tareas"  

        DrawerClickableItem:
            text: "Presupuesto"
            icon: "chart-gantt"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Presupuesto"  

        DrawerClickableItem:
            icon: "book-education"
            text: "Cursos"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Cursos" 

        DrawerClickableItem:
            icon: "email"
            text: "Contacto"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Contacto"

        DrawerClickableItem:
            text: "QR"
            icon: "qrcode-scan"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Inventari"

<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"

<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True
